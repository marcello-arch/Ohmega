def cores():
    global img_cores
    ecra6 = tk.Toplevel(ecra)
    ecra6.tk.call('wm', 'iconphoto', ecra6._w, tk.PhotoImage(file='/usr/share/ohmega/R.gif'))
    ecra6.resizable(0,0)
    ecra6.maxsize(300,700)
